<!-- MainLayout.razor -->
@inherits LayoutComponentBase

<div class="app-container">
    <!-- Sidebar -->
    <nav class="sidebar">
        <h3>Menu</h3>
        <ul>
            <li><NavLink href="/" Match="NavLinkMatch.All">Home</NavLink></li>
            <li><NavLink href="/monitor">Monitor Mode</NavLink></li>
        </ul>
    </nav>

    <!-- Main content -->
    <main class="content">
        @Body
    </main>
</div>

<style>
    /* Container layout */
    .app-container {
        display: flex;
        height: 100vh; /* Full viewport height */
        overflow: hidden;
        font-family: Arial, sans-serif;
    }

    /* Sidebar styles */
    .sidebar {
        width: 220px;
        background-color: #2c3e50;
        color: white;
        padding: 20px;
        box-sizing: border-box;
    }

        .sidebar h3 {
            margin-top: 0;
            margin-bottom: 1rem;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar li {
            margin-bottom: 1rem;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
        }

            .sidebar a.active {
                font-weight: bold;
                text-decoration: underline;
            }

    /* Content styles */
    .content {
        flex: 1;
        padding: 20px;
        overflow-y: auto;
        background-color: #ecf0f1;
    }
</style>
